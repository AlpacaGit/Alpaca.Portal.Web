@model Alpaca.Portal.Web.ViewModels.Notices.Detail

@{
    ViewData["Title"] = "お知らせ詳細";
}

<h1>@Html.DisplayFor(model => model.Head.NoticeTitle)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Head.RegistDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Head.RegistDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoticeBody)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoticeBody)
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("Administrators"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Head.NoticeId">&nbsp;編集&nbsp;</a>
    }
    <a asp-action="Index">&nbsp;一覧に戻る&nbsp;</a>
</div>
